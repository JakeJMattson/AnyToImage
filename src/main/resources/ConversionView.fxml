<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="299.0" prefWidth="569.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1">
    <SplitPane dividerPositions="0.5" layoutX="-1.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
               minWidth="-Infinity" prefHeight="217.0" prefWidth="569.0">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="210.0" prefWidth="285.0">
            <Pane fx:id="dndPane" layoutX="11.0" layoutY="8.0" prefHeight="160.0" prefWidth="259.0"
                  style="-fx-border-style: dashed;">
                <Label layoutX="84.0" layoutY="70.0" text="Drag and drop">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
            </Pane>
            <Button fx:id="btnAddFile" layoutX="11.0" layoutY="174.0" mnemonicParsing="false" prefHeight="33.0"
                    prefWidth="128.0" text="Add File"/>
            <Button fx:id="btnAddDirectory" layoutX="141.0" layoutY="174.0" mnemonicParsing="false"
                    prefHeight="33.0" prefWidth="128.0" text="Add Directory"/>
        </AnchorPane>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="282.0" prefWidth="266.0">
            <Button fx:id="btnRemove" layoutX="11.0" layoutY="174.0" mnemonicParsing="false" prefHeight="33.0"
                    prefWidth="259.0" text="Remove Selected"/>
            <ListView fx:id="lstInputs" layoutX="11.0" layoutY="7.0" prefHeight="160.0" prefWidth="259.0"/>
        </AnchorPane>
    </SplitPane>
    <ToolBar layoutX="300.0" layoutY="255.0" prefHeight="44.0" prefWidth="266.0">
        <Button fx:id="btnSubmit" mnemonicParsing="false" prefHeight="25.0" prefWidth="125.0" text="Submit"/>
        <Button fx:id="btnClear" layoutX="10.0" layoutY="16.0" mnemonicParsing="false" prefHeight="25.0"
                prefWidth="125.0" text="Clear All"/>
    </ToolBar>
    <Button fx:id="btnOutput" layoutX="436.0" layoutY="230.0" mnemonicParsing="false" prefHeight="25.0"
            prefWidth="125.0" text="Select Output"/>
    <TextField fx:id="txtOutput" editable="false" layoutX="5.0" layoutY="230.0" prefHeight="25.0" prefWidth="427.0"
               promptText="Output path"/>
    <ToolBar layoutX="-1.0" layoutY="257.0" prefHeight="42.0" prefWidth="303.0">
        <Label text="Conversion direction:   ">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <RadioButton fx:id="radFiles" mnemonicParsing="false" selected="true" text="Files" toggleGroup="$ConversionDirection">
            <toggleGroup>
                <ToggleGroup fx:id="ConversionDirection"/>
            </toggleGroup>
        </RadioButton>
        <Label fx:id="lblDirectionArrow" text=" --- "/>
        <RadioButton fx:id="radImage" mnemonicParsing="false" text="Image" toggleGroup="$ConversionDirection"/>
    </ToolBar>
</Pane>
